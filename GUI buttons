from tkinter import *
from tkinter.ttk import*

root = Tk()
root.title("Python Button GUI")
root.geometry("300x300")

entry1 =Entry(root, width=50)
entry1.pack()
entry1.insert(0,"Enter text:")

entry2 =Entry(root, width=50)
entry2.pack()
entry2.insert(0,"Enter text:")


btn = Button(root, text='Button 1',
             command=root.destroy)
btn.pack(side='top')


btn = Button(root, text='Button 2',
             command=root.destroy)
btn.pack(side='top')


btn = Button(root, text='Button 3',
             command=root.destroy)
btn.pack(side='top')


btn = Button(root, text='Button 4',
             command=root.destroy)
btn.pack(side='top')


root.mainloop()
